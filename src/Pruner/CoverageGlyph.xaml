<UserControl x:Class="Pruner.CoverageGlyph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:pruner="clr-namespace:Pruner"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
             VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch"
             MouseDown="CoverageGlyph_OnMouseDown"
             d:DataContext="{d:DesignInstance Type=pruner:CoverageTag, IsDesignTimeCreatable=True}">
    <Rectangle Fill="{Binding Path=Color}" Opacity="0.5" Width="3" Height="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Right" />
</UserControl>
 